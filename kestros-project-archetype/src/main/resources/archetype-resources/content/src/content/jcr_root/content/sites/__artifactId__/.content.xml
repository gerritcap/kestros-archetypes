<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
  xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:kes="http://kestros.io/kes/1.0"
  jcr:primaryType="kes:Site">
  <jcr:content
    jcr:primaryType="nt:unstructured"
    sling:resourceType="${artifactId}/components/pages/${artifactId}-base-page"
    kes:theme="/etc/ui-frameworks/${artifactId}-framework/themes/default"
    jcr:title="${artifactName}">
    <header jcr:primaryType="nt:unstructured"
      sling:resourceType="kestros/commons/components/content-area">
      <container
        jcr:primaryType="nt:unstructured"
        sling:resourceType="kestros/commons/components/structure/container">
        <content
          jcr:primaryType="nt:unstructured"
          sling:resourceType="kestros/commons/components/content-area">
          <top-navigation
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/structure/top-navigation"/>
        </content>
      </container>
    </header>
    <main jcr:primaryType="nt:unstructured"
      sling:resourceType="kestros/commons/components/content-area">
      <container
        jcr:primaryType="nt:unstructured"
        sling:resourceType="kestros/commons/components/structure/container">
        <content
          jcr:primaryType="nt:unstructured"
          sling:resourceType="kestros/commons/components/content-area">
          <heading
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/heading"
            text="Welcome to Kestros!"
            level="h1"/>
          <text
            jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/richtext"
            text="&lt;p&gt;If this is your first time using Kestros, be sure to follow along with the &lt;a href=&quot;https://www.kestros.io/docs.html&quot;&gt;Beginner's Guide&lt;/a&gt;&lt;/p&gt;."/>
        </content>
      </container>
    </main>
    <footer jcr:primaryType="nt:unstructured"
      sling:resourceType="kestros/commons/components/content-area">

    </footer>
  </jcr:content>
  <grid-example/>
  <component-variations/>
  <sample-component/>
</jcr:root>

